{% extends 'base.html.twig' %}

{% block body %}
    <h1>Search</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {% include 'rzd/trains.html.twig' with {'foo': 'bar'} %}
    {% include 'rzd/carriages.html.twig' with {'foo': 'bar'} %}
    {{ form_end(form) }}
{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: "Segoe UI",Arial,sans-serif;
    }
    h1 {
        font-size: 30px;
        font-weight: 400;
    }
    button {
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        text-align: center;
        vertical-align: middle;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        border-radius: 4px;
        color: #fff;
        background-color: #5cb85c;
        border: 1px solid #4cae4c;
    }
    #form > div{
        display: inline-block;
        padding: 5px 10px;
    }
    #form > div > label {
        padding-right: 10px;
    }
    .error,
    #form,
    table {
        width: 800px;
        box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)!important;
        background-color: #f1f1f1;
    }
    table {
        border-collapse: collapse;
    }
    table th {
        text-align: left;
        font-weight: 400;
    }
    table th,
    table td {
        padding: 5px 10px;
        border: 1px solid #ccc;
    }
    .error {
        margin-top: 20px;
        text-align: center;
        padding: 10px 0;
        background-color: #f2dede;
    }
</style>
{% endblock %}